<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="helloBean" class="com.yinzifan.liandisys._0918_spring01.HelloWorld">
		<property name="name" value="yinzifan" />
	</bean>

	<!-- Spring 依赖注入 -->
	<bean id="OutputHelper"
		class="com.yinzifan.liandisys._0918_spring02.Solution03_SpringDI_Helper">
		<property name="outputGenerator" ref="CsvOutputGenerator" />
	</bean>

	<bean id="CsvOutputGenerator"
		class="com.yinzifan.liandisys._0918_spring02.CsvOutputGenerator" />
	<bean id="JsonOutputGenerator"
		class="com.yinzifan.liandisys._0918_spring02.JsonOutputGenerator" />
</beans>
